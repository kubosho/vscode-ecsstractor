{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "out",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "Node",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
    ],
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
